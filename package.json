{
  "name": "shopify-koa-app",
  "version": "1.0.0",
  "description": "An embedded Shopify app!",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon --exec babel-node index.js",
    "postinstall": "npm run build-babel && npm run build",
    "start": "npm run server",
    "server": "cross-env NODE_ENV=production node ./dist/index.js",
    "build": "cross-env NODE_ENV=production webpack --config webpack.config.js --progress --colors",
    "build-babel": "npm run clean && babel -d ./dist/server ./server -s && babel -d ./dist index.js && babel -d ./dist/middleware ./middleware && babel -d ./dist/app ./app && babel -d ./dist/client ./client && babel -d ./dist webpack.config.js && babel -d ./dist/server/views ./server/views --copy-files",
    "clean": "rm -rf ./dist && mkdir ./dist"
  },
  "engines": {
    "node": "= 10.13.0"
  },
  "author": "tarokawada",
  "license": "MIT",
  "dependencies": {
    "@shopify/koa-shopify-auth": "^3.1.7",
    "@shopify/koa-shopify-graphql-proxy": "^2.1.2",
    "@shopify/polaris": "3.3.0",
    "@shopify/react-effect": "^1.0.1",
    "@shopify/react-html": "6.0.0",
    "@shopify/react-shopify-app-route-propagator": "^1.0.13",
    "cross-env": "^5.2.0",
    "crypto": "^1.0.1",
    "dotenv": "^6.1.0",
    "ejs": "^2.6.1",
    "graphql": "^14.0.2",
    "isomorphic-fetch": "^2.2.1",
    "koa": "^2.6.1",
    "koa-bodyparser": "^4.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.10.0",
    "koa-static": "^5.0.0",
    "koa-views": "^6.1.5",
    "koa-webpack": "^5.1.1",
    "lodash": "^4.17.11",
    "path": "^0.12.7",
    "react": "^16.6.1",
    "react-apollo": "^2.2.4",
    "react-dom": "^16.6.1",
    "react-fetch-component": "^7.0.0",
    "react-router": "^4.3.1",
    "react-router-dom": "^4.3.1",
    "shopify-api-node": "^2.15.3",
    "webpack": "^4.25.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "css-loader": "^1.0.1",
    "nodemon": "^1.18.9",
    "prettier": "^1.15.1",
    "style-loader": "^0.23.1",
    "babel-core": "^6.26.3",
    "babel-loader": "7",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "webpack-cli": "^3.1.2",
    "kill-port": "^1.3.2",
    "mini-css-extract-plugin": "^0.4.5"
  }
}
